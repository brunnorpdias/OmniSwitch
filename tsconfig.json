{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": [
      "node"
    ]
  },
  "include": [
    "main.ts",
    "src/**/*.ts",
    "tests/**/*.ts",
    "types/**/*.d.ts"
  ]
}
